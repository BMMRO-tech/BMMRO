rules_version = '2'

service cloud.firestore {
  match /databases/{database}/documents {
    allow write, read: if false;
    
    match /dolphin/{dolphinId} {
      allow write, read: if request.auth != null;
    }
    
    match /animal/{animalId} {
      allow write, read: if request.auth != null;  
    }
    
    match /{path=**}/whale/{whaleId} {
      allow write, read: if request.auth != null;
    }
  }
}