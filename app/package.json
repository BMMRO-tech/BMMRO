{
  "name": "bmmro-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts --openssl-legacy-provider start",
    "build": "react-scripts --openssl-legacy-provider build",
    "test": "TZ=UTC firebase emulators:exec --only firestore 'react-scripts test'",
    "test-ci": "TZ=UTC CI=true firebase emulators:exec --only firestore 'jest test --env=jsdom --runInBand'",
    "test-nowatch": "TZ=UTC firebase emulators:exec --only firestore 'react-scripts test --watchAll=false'",
    "eject": "react-scripts eject",
    "format": "prettier --write 'src/' 'firestore/'",
    "format-check": "prettier --check 'src/' 'firestore/'",
    "test-firestore": "firebase emulators:exec --only firestore 'jest firestore/'"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@reach/alert-dialog": "^0.10.5",
    "@reach/router": "^1.3.4",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^10.4.9",
    "@testing-library/user-event": "^12.8.3",
    "date-fns": "^2.15.0",
    "firebase": "^7.24.0",
    "formik": "^2.1.5",
    "node": "^20.4.0",
    "react": "^16.13.1",
    "react-datepicker": "^3.1.3",
    "react-dom": "^16.13.1",
    "react-input-mask": "^2.0.4",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-react": "^7.22.5",
    "@firebase/testing": "^0.20.7",
    "@testing-library/react-hooks": "^3.4.1",
    "babel-jest": "^29.6.1",
    "babel-plugin-styled-components": "^2.1.4",
    "core-js": "^3.31.0",
    "firebase-tools": "^12.4.2",
    "husky": "^4.2.5",
    "jest": "^27.5.1",
    "mutationobserver-shim": "^0.3.7",
    "prettier": "^2.5.1",
    "react-test-renderer": "^16.14.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format-check && npm run test-ci"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
