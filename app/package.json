    "@testing-library/user-event": "^12.0.12",
    "date-fns": "^2.15.0",
    "firebase": "^7.16.1",
    "formik": "^2.1.5",
    "react": "^16.13.1",
    "react-datepicker": "^3.1.3",
    "react-dom": "^16.13.1",
    "react-input-mask": "^2.0.4",
    "react-scripts": "3.4.1"
  },
  "devDependencies": {
    "@firebase/testing": "^0.20.7",
    "husky": "^4.2.5",
    "mutationobserver-shim": "^0.3.7",
    "prettier": "^2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format-check && CI=true npm test"
    }
  },
  "eslintConfig": {
