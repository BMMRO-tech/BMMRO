{
  "name": "bmmro-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "TZ=UTC firebase emulators:exec --only firestore 'react-scripts test'",
